<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.janvanura.vegfinder" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/vegfinder"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RestaurantMainActivity"
            android:label="@string/app_name">
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable"/>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RestaurantDetailActivity"
            android:label="@string/detail"
            android:parentActivityName=".RestaurantMainActivity">
        </activity>
        <provider
            android:authorities="cz.janvanura.vegfinder.contentprovider"
            android:name=".model.db.RestaurantProvider"/>
    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
