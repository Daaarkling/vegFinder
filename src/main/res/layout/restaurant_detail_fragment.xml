<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:id="@+id/detail_name"
            android:text="Bemba"
            android:layout_gravity="center_horizontal"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">


            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/vegfinder"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pozývame vás do prvej reštaurácie so živou stravou na Slovensku. Príďte sa presvedčiť, že nevariť je nielen zdravé, ale aj chutné. Schudnite a prinavráťte si zdravie s prirodzenou rastlinnou stravou. Chudnutie je pri konzumácii rastlinnej stravy prirodzené.  Zastavte sa u nás a presvedčíte sa, že obezita nie je choroba a dá sa ľahko odstrániť."
                android:textSize="16sp"
                android:id="@+id/detail_desc"/>

        </LinearLayout>



        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:columnCount="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:useDefaultMargins="true"
            android:rowOrderPreserved="false">


            <TextView
                android:text="http://soucitne.cz"
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/detail_web"/>

            <TextView
                android:text="E-mail"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="2"/>

            <TextView
                android:text="@string/web"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_column="0"
                android:layout_row="1"
                />

            <TextView
                android:text="restauraciabemba@gmail.com"
                android:autoLink="email"
                android:layout_column="1"
                android:layout_row="2"
                android:id="@+id/detail_email"/>

            <TextView
                android:text="@string/menu"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="3"/>

            <TextView
                android:text="http://www.restauraciabemba.sk/"
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/detail_menu"/>

            <TextView
                android:text="@string/opening_time"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="4"/>

            <TextView
                android:text="Pondělí - Sobota: 10:00 - 21:00"
                android:layout_column="1"
                android:layout_row="4"
                android:id="@+id/detail_opening"/>

            <TextView
                android:text="@string/address"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="5"/>

            <TextView
                android:text="Hálková 1, Nové mesto, Slovensko"
                android:layout_column="1"
                android:layout_row="5"
                android:id="@+id/detail_address"/>


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_btn_nav"
                android:text="@string/navigate"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_on_map"
                android:id="@+id/detail_btn_map"
                android:layout_margin="5dp"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>